{
    "editor.hover.delay": 2500,
    "editor.hover.enabled": true,
    "editor.quickSuggestionsDelay": 2500,
    "terminal.integrated.scrollback": 9999,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "notebook.output.fontSize": 14,
    "editor.fontSize": 14,
    "prettier.printWidth": 100,
    "python.terminal.activateEnvironment": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/Scripts/python",
    "black-formatter.args": [
        "--line-length",
        "100",
        "--skip-string-normalization",
        "--target-version",
        "py313"
    ],
    "editor.occurrencesHighlightDelay": 2000,
    "workbench.hover.delay": 2500,
    "editor.hover.hidingDelay": 500,
    "workbench.sash.hoverDelay": 500,
    "editor.renderLineHighlight": "none",
    "editor.selectionHighlight": false,
    "notebook.output.textLineLimit": 3000,
    "notebook.output.scrolling": true,
    "window.density.editorTabHeight": "default",
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.tabActionCloseVisibility": true,
    "workbench.editor.tabActionLocation": "right",
    "workbench.editor.tabActionUnpinVisibility": true,
    "workbench.editor.tabSizing": "fit",
    "workbench.editor.wrapTabs": false,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 100,
    "workbench.editor.limit.perEditorGroup": false,
    "notebook.backup.sizeLimit": 1000,
    "workbench.editor.limit.excludeDirty": true,
    "workbench.colorCustomizations": {
        "notebook.cellEditorBackground": "#111",
        "notebook.editorBackground": "#111",
        "editor.background": "#111",
        // Inline code (single backtick) text color and background:
        "textPreformat.foreground": "#00bbbc",
        "textPreformat.background": "#111",
        // Fenced code block/no name (triple backtick) background:
        "textCodeBlock.background": "#111" // e.g. a slightly darker gray
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "prettier.useTabs": false,
    "prettier.tabWidth": 4,
    "editor.formatOnSave": false,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.tabWidth": 4
    },
    "[ejs]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.tabWidth": 4
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.tabWidth": 4
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.tabWidth": 4
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.tabWidth": 4
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.tabWidth": 4
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.tabWidth": 4
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.tabWidth": 4
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "python.testing.pytestEnabled": false,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.associations": {
        "*.ejs": "html",
        "stdio.h": "c"
    },
    "code-runner.runInTerminal": true,
    "code-runner.enableAppInsights": true,
    "code-runner.fileDirectoryAsCwd": true,
    "code-runner.executorMap": {
        "javascript": "node",
        "c": "gcc \"$fileName\" -o \"$fileNameWithoutExt\" && ./\"$fileNameWithoutExt\"",
        // "python": "python -u -m unittest -v"
        "python": "python"
    }
}
